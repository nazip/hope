 - if answer.persisted?
    div class = "answer-#{answer.id}"
      p= answer.body
      - if answer.best == true
        =check_box_tag 'best-choice', answer.best, answer.best, disabled: true
        br
      - if user_signed_in?
        -if answer.question.user_id == current_user.id
          - if answer.best
            = link_to 'Убрать метку лучшего ответа', best_question_answer_path(answer.question, answer), id: answer.id,  method: :post, remote: true
          - else
            = link_to 'Пометить как лучший', best_question_answer_path(answer.question, answer), id: answer.id, method: :post, remote: true
        - if answer.user_id == current_user.id
          br
          = link_to 'Удалить ответ', question_answer_path(answer.question_id, answer), remote: true, method: "delete", class: 'text-warning'
          br
          = link_to 'Редактировать ответ', '', class: 'edit-answer-link', data: { answer_id: answer.id }
          br
          = form_for [answer.question, answer], remote: true, html: { id: "edit-answer-#{answer.id}" } do |f|
            = f.text_area :body
            p
            = f.submit 'Сохранить'
        br
      - if !answer.attachments.empty?
        p Attachments:
        ul
          - answer.attachments.each do |a|
            div class = "attachment-#{a.id}"
              li= link_to a.file.identifier, a.file.url
              - if user_signed_in? and answer.user_id == current_user.id
                ul
                  li= link_to "delete #{a.file.identifier}", question_answer_attachment_path(answer.question, answer, a), method: :delete, remote: true
      - if user_signed_in? and answer.user_id != current_user.id
        div class = "links-Answer-#{answer.id}"
          - if current_user.elect_for?(answer, -1)
            = link_to 'like', question_answer_elects_path(question_id: answer.question, answer_id: answer, like: 1), method: :post, remote: true, data: {type: :json}, class: 'like'
            br
          - if current_user.elect_for?(answer, 1)
            = link_to 'dislike', question_answer_elects_path(question_id: answer.question, answer_id: answer, like: -1), method: :post, remote: true, data: {type: :json}, class: 'like'
            br
          - if current_user.elect_for?(answer)
            = link_to 'cancel', question_answer_elect_path(question_id: answer.question, answer_id: answer, id: answer.elects_id( current_user.id)), method: :delete, remote: true, data: {type: :json}, class: 'like'
            br
      .div class = "Answer-#{answer.id}"
        'Рейтинг:
        = answer.sum_elects
      .div class = "Answer-error-#{answer.id}"
      p= '===================================='
